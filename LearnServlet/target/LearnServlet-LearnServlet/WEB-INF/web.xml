<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>appName</param-name>
        <param-value>MyWebApp</param-value>
    </context-param>
    <context-param>
        <param-name>app_port</param-name>
        <param-value>9999</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mycompany.learnservlet.LoginServlet</servlet-class>

    </servlet>
    <servlet>
        <servlet-name>ServletConfig_n_Content</servlet-name>
        <servlet-class>com.mycompany.learnservlet.ServletConfig_n_Content</servlet-class>
        <init-param>
            <param-name>jdbc_url</param-name>
            <param-value>llocalhost:3306</param-value>
        </init-param>
        <init-param>
            <param-name>jdbc_PORT</param-name>
            <param-value>3306</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConfig_n_Content</servlet-name>
        <url-pattern>/ServletConfig_n_Content</url-pattern>
    </servlet-mapping>
    <session-config>
        <filter>
            <filter-name>MyFilter</filter-name>
            <filter-class>com.mycompany.learnservlet.MyFilter</filter-class>
        </filter>
        <filter-mapping>
            <filter-name>MyFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>
        <error-page>
            <error-code>404</error-code>
            <location>/error404.jsp</location>
        </error-page>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
